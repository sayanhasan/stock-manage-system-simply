@using MvcStok.Models.Entity;
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<Tbl_Kategoriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>
            Kategori Id
        </th>
        <th>
            Kategori Adı
        </th>
        <th>
            Sil
        </th>
        <th>
            Güncelle
        </th>
    </tr>
    <tbody>
        @foreach (var kategori in Model)
        {
            <tr>
                <td>
                    <b>@kategori.KategoriId</b>
                </td>
                <td>
                    @kategori.KategoriAd
                </td>
                <td>
                    <a href="/Kategori/Sil/@kategori.KategoriId" class="btn btn-danger">Sil</a>
                </td>
                <td>
                    <a href="/Kategori/KategoriGetir/@kategori.KategoriId" class="btn btn-success">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model,sayfa=>Url.Action("Index",new {sayfa}))
<a href="/Kategori/YeniKategori" class="btn btn-primary">Yeni Kategori Ekle</a>




