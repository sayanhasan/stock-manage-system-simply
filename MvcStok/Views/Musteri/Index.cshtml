@using MvcStok.Models.Entity;
@model List<Tbl_Musteriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Index", "Musteri", FormMethod.Get))
{
    <p>
        Aranacak Müşteri Adı: @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}


<table class="table table-bordered">
    <tr>
        <th>
            Müşteri Id
        </th>
        <th>
            Müşteri Adı
        </th>
        <th>
            Müşteri Soyadı
        </th>
        <th>
            Sil
        </th>
        <th>
            Güncelle
        </th>
        <th>
            Alert
        </th>
    </tr>
    <tbody>
        @foreach (var musteri in Model)
        {
            <tr>
                <td>
                    <b>@musteri.MusteriId</b>
                </td>
                <td>
                    @musteri.MusteriAd
                </td>
                <td>
                    @musteri.MusteriSoyad
                </td>
                <td>
                    <a href="/Musteri/Sil/@musteri.MusteriId" class="btn btn-danger">Sil</a>
                </td>
                <td>
                    <a href="/Musteri/MusteriGetir/@musteri.MusteriId" class="btn btn-success">Güncelle</a>
                </td>
                <td>
                    @Html.ActionLink("Sil", "Sil", new { id = musteri.MusteriId }, new { @class = "btn btn-primary", onclick = "return confirm('Silmek İstiyor musunuz?')" })
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Musteri/YeniMusteri" class="btn btn-primary">Yeni Müşteri Ekle</a>
