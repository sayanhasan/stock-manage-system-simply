@model MvcStok.Models.Entity.Tbl_Urunler
@{
    ViewBag.Title = "YeniUrun";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-group" method="post">
    <div>
        <label>Ürün Adı</label>
        <input type="text" name="UrunAd" class="form-control" />
    </div>
    <div>
        <label>Marka</label>
        <input type="text" name="Marka" class="form-control" />
    </div>
    <div>
        <label>Ürün Kategori</label>
        @Html.DropDownListFor(m=>m.Tbl_Kategoriler.KategoriId,(List<SelectListItem>)ViewBag.dgr,new {@class= "form-control" })
    </div>
    <div>
        <label>Ürün Fiyatı</label>
        <input type="text" name="Fiyat" class="form-control" />
    </div>
    <div>
        <label>Ürün Stoğu</label>
        <input type="text" name="Stok" class="form-control" />
    </div>

    <div style="margin-top:15px">
        <button class="btn btn-info" type="submit">Ürün Ekle</button>
    </div>
</form>
